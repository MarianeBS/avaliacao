<body style="background-color: #16ffc1; padding-top: 5%">
    <div class="container border border-dark" style="background-color: #fafafa;">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
                <div class="container">
                    <a class="navbar-brand" style="font-weight:bold;" href="#">AGENDAMENTOS</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <button type="button" class="btn btn-dark">
                                <li class="nav-item">
                                    <a class="nav-link" style="color: white;" href="/">Cadastrar</a>
                                </li>
                            </button> 
                            <div style="padding: 3px;"></div>   
                            <button type="button" class="btn btn-dark">    
                                <li class="nav-item">
                                    <a class="nav-link" style="color: white;" href="/consultar">Consultar</a>
                                </li>
                            </button>    
                        </ul>
                    </div>
                </div>    
            </nav>
        </div>
        <div class="row">
            <form action="/atualizar/{{ postId.id }}" method="POST" style="padding: 30px 30px 20px 30px; font-weight:bold;">
                <div class="mb-3">
                    <h3 class="text-center" style="font-weight:bold;">Atualizar Agendamento</h3>
                </div>    
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Nome:</label>
                            <input type="text" name="nome" class="form-control border border-dark" id="nome" placeholder="Digite seu nome" value="{{ postId.nome }}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Endereço:</label>
                            <input type="text" class="form-control border border-dark" name="endereco" id="endereco" aria-describedby="endereco" placeholder="Digite o endereço" value="{{ postId.endereco }}">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Bairro:</label>
                            <input type="text" name="bairro" class="form-control border border-dark" id="bairro" placeholder="Digite seu bairro" value="{{ postId.bairro }}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">CEP:</label>
                            <input type="text" class="form-control border border-dark" name="cep" id="cep" aria-describedby="emailHelp" placeholder="Digite o CEP" value="{{ postId.cep }}">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Cidade:</label>
                            <input type="text" name="cidade" class="form-control border border-dark" id="cidade" placeholder="Digite sua cidade" value="{{ postId.cidade }}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="inputState" class="form-label">Estado:</label>
                            <select id="estado" name="estado" class="form-select border border-dark">
                                <option value="SP">SP</option>
                                <option value="RJ">RJ</option>
                                <option value="MG">MG</option>
                            </select>   
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 d-flex justify-content-center">
                        <button type="submit" class="btn btn-dark">Atualizar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
